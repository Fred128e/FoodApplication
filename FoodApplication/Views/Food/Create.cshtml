@model FoodApplication.Models.FoodTable


@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>FoodTable</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FoodName" class="control-label">Food name</label>
                <input asp-for="FoodName" class="form-control" />
                <span asp-validation-for="FoodName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfConsumption" class="control-label">Date of Consumption</label>
                <input asp-for="DateOfConsumption" class="form-control" />
                <span asp-validation-for="DateOfConsumption" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label">Amount</label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MealTypeId" class="control-label">Meal type</label>
                <select asp-for="MealTypeId" class ="form-control" asp-items="ViewBag.MealTypeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label">Category</label>
                <select asp-for="CategoryId" class ="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
